account <primary_username> 
host <primary_server>
port <primary_smtp_port>
protocol smtp
auth on
from <primary_username>@<primary_server>
user <primary_username>@<primary_server>
password <primary_password>
tls on
tls_nocertcheck
domain <secondary_server>

account <secondary_username>
host <secondary_server>
port <secondary_smtp_port>
protocol smtp
auth on
from <secondary_username>@<secondary_server>
user <secondary_username>@<secondary_server>
password <secondary_password> 
tls on
tls_nocertcheck
domain <secondary_server>

account default : <primary_username>
